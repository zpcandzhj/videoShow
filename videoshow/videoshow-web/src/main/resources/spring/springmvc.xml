<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 定义springmvc(controller)的扫描包 (如果配置了<context:component-scan>则<context:annotation-config/>标签就可以不用)-->
    <context:component-scan base-package="com.zpc.videoshow.controller"/>

    <!-- 开启springmvc注解 (会自动注册json转换器)-->
    <mvc:annotation-driven/>
    <!--过滤静态资源-->
    <mvc:resources mapping="/static/imgs/**" location="static/imgs/" />
    <mvc:resources mapping="/static/js/**" location="static/js/" />
    <mvc:resources mapping="/static/css/**" location="static/css/" />
    <!-- 支持上传文件 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>

    <!-- 配置视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>